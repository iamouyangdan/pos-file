{
  "name": "pos-file",
	"displayName": "pos-file",
	"description": "help us create files more convenient and standardized",
	"version": "1.2.2",
	"publisher": "ouyangdan",
	"repository": {
		"type": "git",
        "url": "https://github.com/iamouyangdan/pos-file.git"
	},
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "*"
	],
	"main": "./extension.js",
	"icon": "images/pos.png",
	"contributes": {
		"menus": {
			"pos-file.create": [
				{
					"command": "pos-file.createPage",
					"group":"navigation@1"
				},
				{
					"command": "pos-file.createAllModel",
					"group":"navigation@1"
				},
				{
					"command": "pos-file.createView",
					"group":"navigation@1"
				},
				{
					"command": "pos-file.createService"
				},
				{
					"command": "pos-file.createModel"
				},
				{
					"command": "pos-file.createDao"
				},
				{
					"command": "pos-file.createApi"
				},
				{
					"command": "pos-file.createRoute"
				},
				{
					"command": "pos-file.createPopup"
				}
			],
			"explorer/context": [
				{	
					"submenu":"pos-file.create",
					"group":"navigation@1",
					"when":"explorerResourceIsFolder == true"
				}			
				
			]
		},
		"submenus": [
			{
				"id": "pos-file.create",
				"label": "新建POS文件"
			}
		],
		"commands": [
			{
				"command": "pos-file.createApi",
				"title": "api层1个文件"
			},
			{
				"command": "pos-file.createDao",
				"title": "dao层2个文件"
			},
			{
				"command": "pos-file.createModel",
				"title": "model层1个文件"
			},
			{
				"command": "pos-file.createAllModel",
				"title": "model层4个文件"
			},
			{
				"command": "pos-file.createService",
				"title": "service层1个文件"
			},
			{
				"command": "pos-file.createView",
				"title": "view层1个文件"
			},
			{
				"command": "pos-file.createPage",
				"title": "完整页面6个文件"
			},
			{
				"command": "pos-file.createPopup",
				"title": "1个弹窗文件"
			},
			{
				"command": "pos-file.createRoute",
				"title": "1个路由"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.54.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.19.0",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0"
    }

}
